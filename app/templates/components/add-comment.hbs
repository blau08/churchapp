{{yield}}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3 id="ledCommentsH3">Comments</h3>
      {{input class='form-control' value=name id='name' placeholder='Name'}}
      <br>
      {{textarea rows='3' class='form-control' value=description id='description' placeholder='Please add a comment'}}
      <br>
      <button class="btn btn-primary" {{action 'submit'}}>Add Comment</button>
    </div>
  </div>
</div>
